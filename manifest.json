{
  "manifest_version": 3,
  "name": "App Blocker",
  "version": "1.0",
  "description": "Block distracting websites to improve productivity",
  "icons": {
    "16": "src/assets/icons/Icon.png",
    "48": "src/assets/icons/Icon.png",
    "128": "src/assets/icons/Icon.png"
  },
  "permissions": ["storage", "activeTab", "tabs"],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Bolton Blocker"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://cdnjs.cloudflare.com; object-src 'self'"
  }
}
