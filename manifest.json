{
  "manifest_version": 3,
  "name": "App Blocker",
  "version": "1.0",
  "description": "Block distracting websites to improve productivity",
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "App Blocker"
  },
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}